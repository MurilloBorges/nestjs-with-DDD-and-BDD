{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "paths": {
            "*": ["apps/types/*"]
        },
        "types": ["node", "jest"]
    },
    "include": ["apps/**/*"],
    "exclude": ["node_modules"]
}
